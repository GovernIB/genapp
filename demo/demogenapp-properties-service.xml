<?xml version="1.0" encoding="UTF-8" ?>
<server>
  <mbean code="org.jboss.varia.property.SystemPropertiesService" name="jboss:type=Service,name=demogenappSystemProperties">
    <attribute name="Properties">
	  <!-- Propietat que indica als projectes que activins les caracteristiques
      especials requerides en l'entorn de la CAIB (Govern Balear) si es true -->
	  org.fundaciobit.demogenapp.iscaib=false
	
	
      # Dialecte de Hibernate
      org.fundaciobit.demogenapp.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
      # org.fundaciobit.demogenapp.hibernate.dialect=org.hibernate.dialect.MySQLDialect      
      # org.fundaciobit.demogenapp.hibernate.dialect=org.hibernate.dialect.DB2Dialect
      # org.fundaciobit.demogenapp.hibernate.dialect=org.hibernate.dialect.SQLServerDialect
      # org.fundaciobit.demogenapp.hibernate.dialect=net.sf.hibernate.dialect.Oracle9Dialect
      # org.fundaciobit.demogenapp.hibernate.dialect=org.hibernate.dialect.Oracle10gDialect
      # org.fundaciobit.demogenapp.hibernate.query.substitutions=true 1, false 0

      <!-- Directori on es guardaran tots els fitxers de DemoGenApp-->
      org.fundaciobit.demogenapp.filesdirectory=D:\\dades\\dades\\CarpetesPersonals\\ProgramacioPortaFIB3\\genapp-2.0\\demo\\demogenappfiles
      <!-- Accés HTTP a l'aplicació (Important que sigui http, no https)  -->
      org.fundaciobit.demogenapp.url=http://localhost:8080/demogenapp
      org.fundaciobit.demogenapp.email.from=demogenapp@demogenapp.org
      org.fundaciobit.demogenapp.defaultlanguage=ca
      org.fundaciobit.demogenapp.development=false
      <!-- Tamany màxim de pujada de fitxers en bytes. No definit significa sense límit -->
      org.fundaciobit.demogenapp.maxuploadsizeinbytes=
      <!-- Tamany màxim del fitxer PDF una vegada se li han afegit els annexes i taula de firmes. No definit significa sense límit -->
      org.fundaciobit.demogenapp.maxfitxeradaptatsizeinbytes=
      <!-- Clau per encriptar l'identificador del fitxers a descarregar (IMPORTANT tamany de 16 caràcters) -->
      org.fundaciobit.demogenapp.encryptkey=1234567890123456
      org.fundaciobit.demogenapp.name=DemoGenApp
    </attribute>
  </mbean>
</server>
